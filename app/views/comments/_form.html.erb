<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label 'Name' %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label 'Notes' %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit 'Add note', class: 'btn-lg btn-dark' %>
  </p>
<% end %>