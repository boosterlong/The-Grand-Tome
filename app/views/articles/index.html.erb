<div style="background-color: rgba(255, 255, 255, 0.8);;"><h1 style="text-align:center">Potential Quest Hooks
<div><%= link_to 'New article', new_article_path, class: "btn btn-dark btn-sm" %></h1></div>
<br></div>


<div class="d-flex flex-wrap justify-content-center">
 
  <% @articles.each do |article| %>
     
      <div class="card bg-light mb-3" style="width: 18rem; margin: 10px"><div class="card-body text-center"><%= link_to article.title, article_path(article), class: "card-title btn btn-dark" %></div>
            <div style= "text-align:center;" class="dropdown">
  <button style="margin-bottom:5px;" class="btn-sm btn-dark dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    Author Controls
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
    <li><a class="dropdown-article"><%= link_to 'Edit', edit_article_path(article), class: 'btn-sm btn-light' %></a></li>
    <li><a class="dropdown-article"><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'btn-sm btn-light' %></a></li>
  </ul>
</div><div class="card-footer text-muted"><%= article.text[0...140] %>...</div>
              </div>
    
  
  <% end %>
</div>
